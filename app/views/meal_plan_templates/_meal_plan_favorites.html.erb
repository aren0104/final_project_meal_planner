<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Favorites

    <a data-toggle="collapse" href="#meal_plan_favorites_new_form">
      Add favorite
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @meal_plan.favorites.each do |favorite| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/favorites/<%= favorite.id %>">
          <%= favorite.dish_id %>
        </a>

        <a href="/delete_favorite_from_meal/<%= favorite.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="meal_plan_favorites_new_form">
        <%= render partial: "meal_plan_templates/meal_plan_favorites_new_form" %>
      </div>
    </div>

  </ul>
</div>
