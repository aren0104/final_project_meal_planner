<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Meal plan #<%= @meal_plan.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/meal_plans" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/meal_plans/<%= @meal_plan.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit meal plan
        </a>
      </div>

      <div class="col">
        <a href="/delete_meal_plan/<%= @meal_plan.id %>" class="btn btn-block btn-outline-secondary">
          Delete meal plan
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@meal_plan.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@meal_plan.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "meal_plan_templates/meal_plan_favorites" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "meal_plan_templates/meal_plan_dishes" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "meal_plan_templates/meal_plan_cuisines" %>
  </div>
</div>
