<%= search_form_for @q, :class => collapse_search_form, :id => "dishes_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :meal_id, "Meal" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :meal_id_gteq, :class => "form-control", :placeholder => "Meal greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :meal_id_lteq, :class => "form-control", :placeholder => "Meal less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image_cont, "Image contains" %>
    <%= f.text_field :image_cont, :class => "form-control", :placeholder => "Image contains" %>
  </div>

  <div class="form-group">
    <%= f.label :recipe_cont, "Recipe contains" %>
    <%= f.text_field :recipe_cont, :class => "form-control", :placeholder => "Recipe contains" %>
  </div>

  <div class="form-group">
    <%= f.label :calories, "Calories" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :calories_gteq, :class => "form-control", :placeholder => "Calories greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :calories_lteq, :class => "form-control", :placeholder => "Calories less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :cuisine_name_cont, "Cuisine name contains" %>
    <%= f.text_field :cuisine_name_cont, :class => "form-control", :placeholder => "Cuisine name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "MealPlan Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='mealsgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :meals_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "MealPlan Created at greater than or equal to", :data => {:target => '#mealsgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#mealsgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='mealslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :meals_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "MealPlan Created at less than or equal to", :data => {:target => '#mealslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#mealslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#mealsgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#mealslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#mealsgteqcreated_atPicker').on("dp.change", function (e) {
              $('#mealslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#mealslteqcreated_atPicker').on("dp.change", function (e) {
              $('#mealsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :fans_email_cont, "User email contains" %>
    <%= f.text_field :fans_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/dishes" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#dishes_filters">
  Show filters
</a>
