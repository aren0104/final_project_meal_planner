<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Comments

    <a data-toggle="collapse" href="#dish_comments_new_form">
      Add comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dish.comments.each do |comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/comments/<%= comment.id %>">
          <%= comment.author_id %>
        </a>

        <%if current_user == comment.author %>
          <a href="/delete_comment_from_dish/<%= comment.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dish_comments_new_form">
        <%= render partial: "dish_templates/dish_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
