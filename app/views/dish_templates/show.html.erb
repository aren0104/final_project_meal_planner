<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Dish #<%= @dish.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/dishes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/dishes/<%= @dish.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit dish
        </a>
      </div>

      <div class="col">
        <a href="/delete_dish/<%= @dish.id %>" class="btn btn-block btn-outline-secondary">
          Delete dish
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @dish.name %>
      </dd>

      <dt>
        Calories
      </dt>
      <dd>
        <%= @dish.calories %>
      </dd>

      <dt>
        Recipe
      </dt>
      <dd>
        <%= @dish.recipe %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @dish.image %>
      </dd>

      <dt>
        Meal
      </dt>
      <dd>
        <%= @dish.meal_id %>
      </dd>

      <dt>
        Cuisine
      </dt>
      <dd>
        <% if @dish.cuisine.present? %>
          <a href="/cuisines/<%= @dish.cuisine_id %>">
            <%= @dish.cuisine.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@dish.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@dish.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "dish_templates/dish_comments" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "dish_templates/dish_favorites" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "dish_templates/dish_meals" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "dish_templates/dish_fans" %>
  </div>
</div>
