<h1>
  Add a new favorite
</h1>


<hr>

<form action="/create_favorite" method="post">

  <div class="form-group">
    <label for="dish_id">
      Dish
    </label>

    <%= select_tag(:dish_id, options_from_collection_for_select(Dish.all, :id, :name, @favorite.dish_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="fan_id">
      Fan
    </label>

    <%= select_tag(:fan_id, options_from_collection_for_select(User.all, :id, :email, @favorite.fan_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="meal_id">
      Meal
    </label>

    <%= select_tag(:meal_id, options_from_collection_for_select(MealPlan.all, :id, :created_at, @favorite.meal_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="cuisine_id">
      Cuisine
    </label>

    <%= select_tag(:cuisine_id, options_from_collection_for_select(Cuisine.all, :id, :name, @favorite.cuisine_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create favorite
  </button>
</form>

<hr>

<a href="/favorites">
  Go back
</a>
