<!-- Validation failure messages -->
<% if @favorite.present? %>
  <% if @favorite.errors.any? %>
    <% @favorite.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new favorite
</h1>


<hr>

<!-- Form favorite start -->
<form action="/create_favorite" method="post">
<!-- Form favorite end -->

  <!-- Label and input for dish_id start -->
  <div class="form-group">
    <label for="dish_id">
      Dish
    </label>

    <!-- Input for dish_id start -->
    <%= select_tag(:dish_id, options_from_collection_for_select(Dish.all, :id, :name, @favorite.dish_id), :class => "form-control") %>
    <!-- Input for dish_id end -->
  </div>
  <!-- Label and input for dish_id end -->

  <!-- Label and input for fan_id start -->
  <div class="form-group">
    <label for="fan_id">
      Fan
    </label>

    <!-- Input for fan_id start -->
    <input type="text" id="fan_id" name="fan_id" class="form-control" value="<%= @favorite.fan_id %>">
    <!-- Input for fan_id end -->
  </div>
  <!-- Label and input for fan_id end -->

  <!-- Label and input for meal_id start -->
  <div class="form-group">
    <label for="meal_id">
      Meal
    </label>

    <!-- Input for meal_id start -->
    <input type="text" id="meal_id" name="meal_id" class="form-control" value="<%= @favorite.meal_id %>">
    <!-- Input for meal_id end -->
  </div>
  <!-- Label and input for meal_id end -->

  <!-- Label and input for cuisine_id start -->
  <div class="form-group">
    <label for="cuisine_id">
      Cuisine
    </label>

    <!-- Input for cuisine_id start -->
    <input type="text" id="cuisine_id" name="cuisine_id" class="form-control" value="<%= @favorite.cuisine_id %>">
    <!-- Input for cuisine_id end -->
  </div>
  <!-- Label and input for cuisine_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create favorite
  </button>
</form>

<hr>

<a href="/favorites">
  Go back
</a>
