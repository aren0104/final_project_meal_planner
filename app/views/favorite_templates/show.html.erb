<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Favorite #<%= @favorite.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/favorites" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link favorite start -->
      <div class="col">
        <a href="/favorites/<%= @favorite.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit favorite
        </a>
      </div>
      <!-- Edit link favorite end -->

      <!-- Delete link favorite start -->
      <div class="col">
        <a href="/delete_favorite/<%= @favorite.id %>" class="btn btn-block btn-outline-secondary">
          Delete favorite
        </a>
      </div>
      <!-- Delete link favorite end -->
    </div>

    <dl>
      <dt>
        Dish
      </dt>
      <!-- Display dish_id start -->
      <dd>
        <% if @favorite.dish.present? %>
          <a href="/dishes/<%= @favorite.dish_id %>">
            <%= @favorite.dish.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display dish_id end -->

      <dt>
        Fan
      </dt>
      <!-- Display fan_id start -->
      <dd>
        <% if @favorite.user.present? %>
          <a href="/users/<%= @favorite.fan_id %>">
            <%= @favorite.user.email %>
          </a>
        <% end %>
      </dd>
      <!-- Display fan_id end -->

      <dt>
        Meal
      </dt>
      <!-- Display meal_id start -->
      <dd>
        <% if @favorite.meal.present? %>
          <a href="/meal_plans/<%= @favorite.meal_id %>">
            <%= @favorite.meal.created_at %>
          </a>
        <% end %>
      </dd>
      <!-- Display meal_id end -->

      <dt>
        Cuisine
      </dt>
      <!-- Display cuisine_id start -->
      <dd>
        <% if @favorite.cuisine.present? %>
          <a href="/cuisines/<%= @favorite.cuisine_id %>">
            <%= @favorite.cuisine.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display cuisine_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@favorite.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@favorite.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

