<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Comment #<%= @comment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/comments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @comment.author %>
          <a href="/comments/<%= @comment.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit comment
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @comment.author %>
          <a href="/delete_comment/<%= @comment.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete comment
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Author
      </dt>
      <dd>
        <% if @comment.author.present? %>
          <a href="/users/<%= @comment.author_id %>">
            <%= @comment.author.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Dish
      </dt>
      <dd>
        <% if @comment.dish.present? %>
          <a href="/dishes/<%= @comment.dish_id %>">
            <%= @comment.dish.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @comment.description %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@comment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@comment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

